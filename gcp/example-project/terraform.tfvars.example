# Instance Group 配置
instance_groups = {
  "algorithm-ew2-a-ig" = {
    name        = "algorithm-ew2-a-ig"
    description = "Instance group for algorithm VMs in europe-west2-a"
    zone        = "europe-west2-a"
    instances   = ["algorithm-ew2-vm1"]  # VM instance keys
    named_ports = [
      {
        name = "http" # backend-rtb-adaptor
        port = 8080
      },
      {
        name = "revo-ai" # revo-ai
        port = 8000
      }
    ]
  }
}

